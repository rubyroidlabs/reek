---
  detectors:
    IrresponsibleModule:
      enabled: false

    FeatureEnvy:
      enabled: false

    DuplicateMethodCall:
      max_calls: 3

    Attribute:
      enabled: false

    TooManyStatements:
      enabled: true
      exclude:
      - initialize
      - perform
      - change
      - up
      - down
      max_statements: 5

  exclude_paths:
    - 'db/**/*'
