---
DuplicateMethodCall:
  max_calls: 3

FeatureEnvy:
 enabled: false

IrresponsibleModule:
  enabled: false

NestedIterators
  max_allowed_nesting: 2

TooManyStatements:
  enabled: true
  exclude:
  - initialize
  - perform
  - change
  - up
  - down
  max_statements: 5

"app/workers":
  UtilityFunction:
    enabled: false

"db/migrate":
  UtilityFunction:
    enabled: false
